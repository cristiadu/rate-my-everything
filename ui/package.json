{
    "name": "@cristiadu/rate-my-everything-ui",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "webpack-dev-server --mode development --open",
        "build": "webpack --mode production",
        "deploy": "pnpm run build && git add -f dist && git fetch origin main && COMMIT_HASH=$(git rev-parse origin/main) && REMOTE_URL=$(git config --get remote.origin.url) && COMMIT_LINK=\"$REMOTE_URL/commit/$COMMIT_HASH\" && git commit -m \"Publish $COMMIT_LINK to Github Pages\" && git push origin `git subtree split --prefix dist main`:refs/heads/live --force",
        "release": "echo \"Release UI\"",
        "test": "jest",
        "lint": "echo \"Lint UI and API\"",
        "upgrade-dependencies": "pnpm up --latest",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build"
    },
    "dependencies": {
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@types/node": "^22.15.29",
        "@types/react": "^19.1.6",
        "@types/react-burger-menu": "^2.8.7",
        "@types/react-dom": "^19.1.5",
        "dotenv": "^16.5.0",
        "dotenv-expand": "^12.0.2",
        "react": "^19.1.0",
        "react-app-polyfill": "^3.0.0",
        "react-bulma-components": "^4.1.0",
        "react-burger-menu": "^3.1.0",
        "react-dom": "^19.1.0",
        "react-router-dom": "^7.6.1",
        "resize-observer-polyfill": "^1.5.1",
        "semver": "^7.7.2",
        "typescript": "^5.8.3"
    },
    "devDependencies": {
        "@babel/core": "^7.27.4",
        "@babel/preset-env": "^7.27.2",
        "@babel/preset-react": "^7.27.1",
        "@babel/preset-typescript": "^7.27.1",
        "@chromatic-com/storybook": "^4.0.0",
        "@storybook/addon-actions": "^9.0.4",
        "@storybook/addon-docs": "^9.0.4",
        "@storybook/addon-essentials": "^8.6.14",
        "@storybook/addon-interactions": "^8.6.14",
        "@storybook/addon-links": "^9.0.4",
        "@storybook/addon-onboarding": "^9.0.4",
        "@storybook/addon-webpack5-compiler-swc": "^3.0.0",
        "@storybook/blocks": "^8.6.14",
        "@storybook/builder-webpack5": "^9.0.4",
        "@storybook/node-logger": "^8.6.14",
        "@storybook/react": "^9.0.4",
        "@storybook/react-webpack5": "^9.0.4",
        "@storybook/test": "^8.6.14",
        "@types/jest": "^29.5.14",
        "@typescript-eslint/eslint-plugin": "^8.33.0",
        "@typescript-eslint/parser": "^8.33.0",
        "babel-loader": "^10.0.0",
        "copy-webpack-plugin": "^13.0.0",
        "css-loader": "^7.1.2",
        "eslint": "^9.28.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-storybook": "^9.0.4",
        "html-webpack-plugin": "^5.6.3",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "30.0.0-beta.3",
        "jest-watch-typeahead": "^2.2.2",
        "storybook": "^9.0.4",
        "style-loader": "^4.0.0",
        "ts-jest": "^29.3.4",
        "webpack": "^5.99.9",
        "webpack-bundle-analyzer": "^4.10.2",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.1"
    },
    "jest": {
        "roots": [
            "<rootDir>/src"
        ],
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts,tsx}",
            "!src/**/*.d.ts"
        ],
        "setupFiles": [
            "react-app-polyfill/jsdom"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/src/setupTests.ts"
        ],
        "testMatch": [
            "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
            "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "testEnvironment": "jsdom",
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|cjs|ts|tsx)$",
            "^.+\\.module\\.(css|sass|scss)$"
        ],
        "moduleNameMapper": {
            "^react-native$": "react-native-web",
            "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
        },
        "moduleFileExtensions": [
            "web.js",
            "js",
            "web.ts",
            "ts",
            "web.tsx",
            "tsx",
            "json",
            "web.jsx",
            "jsx",
            "node"
        ],
        "watchPlugins": [
            "jest-watch-typeahead/filename",
            "jest-watch-typeahead/testname"
        ],
        "resetMocks": true
    }
}