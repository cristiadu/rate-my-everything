{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:storybook/recommended",
        "plugin:react/recommended",
        "airbnb"
    ],
    "overrides": [
        {
            "files": [
                "**/*.test.tsx",
                "**/*.test.ts",
                "**/*.test.js",
                "**/*.test.jsx"
            ],
            "env": {
                "jest": true
            }
        },
        {
            "files": [
                "**/*.stories.@(js|jsx|ts|tsx)"
            ],
            "rules": {
                "import/no-extraneous-dependencies": "off"
            }
        }
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "import/extensions": [
            "error",
            "never",
            {
                "css": "always",
                "svg": "always",
                "stories": "always"
            }
        ],
        "react/jsx-props-no-spreading": [
            "off"
        ],
        "react/function-component-definition": [
            "error",
            {
                "namedComponents": "arrow-function",
                "unnamedComponents": "arrow-function"
            }
        ],
        "max-len": [
            "error",
            {
                "code": 140,
                "tabWidth": 2
            }
        ],
        "react/jsx-filename-extension": [
            "error",
            {
                "extensions": [
                    ".jsx",
                    ".tsx"
                ]
            }
        ],
        "semi": [
            "error",
            "never"
        ]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        }
    }
}