{
  "name": "@cristiadu/rate-my-everything",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "api",
    "ui"
  ],
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
    "start": "pnpm --parallel -r run start",
    "build": "pnpm --parallel -r run build",
    "deploy": "pnpm --parallel -r run deploy",
    "release": "pnpm --parallel -r run release",
    "test": "pnpm --parallel -r run test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "upgrade-dependencies": "pnpm up --latest && pnpm -C ui upgrade-dependencies && pnpm -C api upgrade-dependencies"
  },
  "devDependencies": {
    "eslint": "^9.28.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0"
  },
  "type": "module"
}